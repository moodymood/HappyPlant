<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sensor_detail_container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:weightSum="1">

    // Header
    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="90dp"
        android:layout_width="fill_parent"
        android:weightSum="1"
        android:layout_weight="0.38">
        <ImageView android:id="@+id/sensorStatusImg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/green_led"
            android:layout_gravity="center_vertical|left" />
        <TextView android:id="@+id/sensorLabelText"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.25"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/tempLabelText">
        </TextView>
    </LinearLayout>

    <View android:id="@+id/separator5"  android:layout_width="fill_parent" android:layout_height="0.7dp" android:layout_marginBottom="20dp" android:visibility="visible" android:background="#9f222222"/>


    // Wrap to scroll

    // Wrap in a creoll
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="259dp"
            android:weightSum="1"
            android:layout_marginLeft="10dp">



            // Current value and required value
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:weightSum="1">


                <TextView android:id="@+id/sensorValuesText"
                        android:layout_width="wrap_content"
                        android:layout_height="60dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="@string/sensorValuesText" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/edit"
                    android:onClick="editRequiredValue"
                    android:contentDescription="@string/edit"
                    android:layout_marginTop="17dp"
                    android:layout_marginLeft="5dp" />

            </LinearLayout>


            // Graph
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/graph"/>

                <ImageView
                    android:layout_width="266dp"
                    android:layout_height="280dp"
                    android:src="@drawable/graph"/>

            </LinearLayout>



        </LinearLayout>
    </ScrollView>



</LinearLayout>



