<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uni.swansea.happyplant" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SensorListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SensorDetailActivity"
            android:label="@string/title_sensor_detail"
            android:parentActivityName=".SensorListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SensorListActivity" />
        </activity>
    </application>

</manifest>
